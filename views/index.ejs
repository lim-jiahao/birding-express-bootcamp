<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <title>ðŸ›¸ UFO Sightings ðŸ‘½</title>
  </head>
  <body class="text-center bg-dark text-light">
    <%- include('common/nav', { page: '/' }) %>
    <div class="px-md-5" style="margin-top: 70px">
      <table class="table table-dark table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Note</th>
            <th scope="col">Date</th>
            <th scope="col">Behaviour</th>
            <th scope="col">Flock Size</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% notes.forEach((note) => { %>
          <tr>
            <th scope="row">
              <a href="/note/<%= note.index %>">Note <%= note.index %></a>
            </th>
            <td><%= new Date(note.date_time).toDateString() %></td>
            <td><%= note.behaviour %></td>
            <td><%= note.flock_size %></td>
            <td>
              <form action="#" class="me-2">
                <input
                  type="submit"
                  value="Edit"
                  class="btn btn-warning btn-sm text-light"
                />
              </form>
            </td>
            <td
              data-bs-toggle="tooltip"
              title="Deleting is permanent. Please make sure you are deleting the right note."
            >
              <form action="#" method="POST">
                <input
                  type="submit"
                  value="Delete"
                  class="btn btn-danger btn-sm text-light"
                />
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
