<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body
    class="
      container-fluid
      d-flex
      flex-column
      align-items-center
      bg-dark
      text-light
    "
  >
    <%- include('common/nav') %>
    <div class="card bg-secondary mb-3" style="margin-top: 70px">
      <h6 class="card-header">
        <%= locals.page === '/login' ? 'Login' : 'Signup' %>
      </h6>
      <div class="card-body">
        <form action="<%= locals.page %>" method="POST">
          <div class="mb-1">
            <label for="email">Email:</label><br />
            <input type="email" name="email" required />
          </div>
          <div class="mb-1">
            <label for="username">User Name:</label><br />
            <input type="text" name="username" required />
          </div>
          <div class="mb-1">
            <label for="password">Password:</label><br />
            <input type="password" name="password" required />
          </div>
          <input type="submit" value="Submit" />
        </form>
        <% if (locals.page === '/login') { %>
        <p style="font-size: 11px">
          New to bird watching?
          <a class="fw-bold text-info" href="/signup">Sign up</a> now!
        </p>
        <% } else { %>
        <p style="font-size: 11px">
          Already have an account?
          <a class="fw-bold text-info" href="/login">Log in</a> now!
        </p>
        <% } %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
